<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/style.css" />
    <title>Fore Score</title>

</head>
<body>
    <nav id="navbar">
        <a href="/users/<%= user._id %>">My Rounds</a>
        <a href="">New Round</a>
        <a href="">New Course</a>
        <ul class="right">
            <li>
            <% if (user) { %>
                <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
            <% } else { %>
                <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
            <% } %>
            </li>
        </ul>
    </nav>
    <h1><%= title %></h1>
    <main>
<h3>My Rounds</h3>

<% if (user.rounds.length) { %>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Course</th>
      <th>Score</th>
      <th>To Par</th>
    </tr>
  </thead>
  <tbody>
    <% user.rounds.forEach(function(r) { %>
    <td><%= r.dateOfPlay %></td>
    <td><%= r.course %></td>
    <td><%= r.score %></td>
    <td><%= (r.score - 72)</td>
    <% }); %>
  </tbody>
</table>
<% } else { %>
<h5>No Rounds to Display</h5>
<% } %> <%- include('../partials/footer') %>
